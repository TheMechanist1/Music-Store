@model IEnumerable<Music_Store.Models.ShoppingCart>

<h2>Your Shopping Cart</h2>

@if (Model == null || !Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <ul>
        @foreach (var item in Model)
        {
            @foreach (var carts in item.Items)
            {
                <li>
                    <strong>Song:</strong> @carts.Song.Title <br />
                    <strong>Genre:</strong> @carts.Song.Genre <br />
                    <strong>Artist:</strong> @carts.Song.Performer <br />
                    <hr>
                    <!-- Other details -->
                </li>
            }
        }
    </ul>
}
